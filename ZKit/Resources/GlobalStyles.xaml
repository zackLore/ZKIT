<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ZKit">
    <SolidColorBrush x:Key="dark_gray" Color="#444444" />
    <SolidColorBrush x:Key="med_dark_gray" Color="#666666" />
    <SolidColorBrush x:Key="med_gray" Color="#888888" />
    <SolidColorBrush x:Key="med_light_gray" Color="#AAAAAA" />
    <SolidColorBrush x:Key="light_gray" Color="#CCCCCC" />

    <Style TargetType="TextBlock" x:Key="Required">
        <Setter Property="Foreground" Value="#FF5555" />
        <Setter Property="ToolTip" Value="This field is required" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Width" Value="100" />
    </Style>
</ResourceDictionary>